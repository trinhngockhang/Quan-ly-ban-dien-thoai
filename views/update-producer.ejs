    <script>
    $( document ).ready(function() {
      $( "#form-update-producer" ).submit(function( event ) {
        $.ajax({ // create an AJAX call...
          data: $(this).serialize(), // get the form data
          type: $(this).attr('method'), // GET or POST
          url: $(this).attr('action'), // the file to call
          success: function(response) { // on success..
              if(response === "Success"){
                $(".mess").css("display","block");
              }else{
                $(".mess").html("✕ Nhập không thành công");
                $(".mess").css("color","red");
                $(".mess").css("display","block");
              }
          }
      });
        event.preventDefault();
      });



      $.get("/api/allProducer").done(function(data){
        data.forEach((doc,index) => {
          console.log(doc);
          $("#selectProducer").append("<option class='option-producer' id= " + 'producer' + index + "></option>");
          $("#producer" + index).html(doc.name);
          $("#producer" + index).val(doc._id);
        })
        $("#name").val(data[0].name);
        $("#phone").val(data[0].phone);
        $("#email").val(data[0].email);
        $("#address").val(data[0].address);
        $("#selectProducer").change(function(){
          var phone = $("select option:selected").text();
          data.forEach((doc,index) => {
            if(doc.name === phone){
              $("#name").val(doc.name);
              $("#phone").val(doc.phone);
              $("#email").val(doc.email);
              $("#address").val(doc.address);
            }
          })
        })
      })
    })
